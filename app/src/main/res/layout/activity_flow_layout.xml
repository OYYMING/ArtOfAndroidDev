                style="@style/keyword_style"
                android:text="C#"/>
            <TextView
                style="@style/keyword_style"
                android:text="IntelliJ"/>
            <TextView
                style="@style/keyword_style"
                android:text="Better Call Saul"/>
            <TextView
                style="@style/keyword_style"
                android:text="Breaking Bad"/>
            <TextView
                style="@style/keyword_style"
                android:text="What The Fxxk"/>
            <TextView
                style="@style/keyword_style"
                android:text="This is an example for wrap_content"/>
        </com.example.artofandroiddev.chapter4.flowlayout.FlowLayout>
    </LinearLayout>
</ScrollView>

