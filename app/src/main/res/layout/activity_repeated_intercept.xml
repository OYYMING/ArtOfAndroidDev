<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chapter3.repeatedintercepttouchevent.RepeatedInterceptActivity">

    <com.example.artofandroiddev.chapter3.repeatedintercepttouchevent.ScrollViewEx
        android:id="@+id/sv_repeated_intercept"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:text="HEADER"
                android:textSize="25sp" />

            <com.example.artofandroiddev.chapter3.repeatedintercepttouchevent.ListViewEx
                android:id="@+id/lv_repeated_intercept"
                android:layout_width="match_parent"
                android:layout_height="600dp"></com.example.artofandroiddev.chapter3.repeatedintercepttouchevent.ListViewEx>
        </LinearLayout>
    </com.example.artofandroiddev.chapter3.repeatedintercepttouchevent.ScrollViewEx>

    <TextView
        android:id="@+id/tv_touchevent_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp" />
</RelativeLayout>