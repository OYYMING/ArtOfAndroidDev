<?xml version="1.0" encoding="utf-8"?>
<com.example.artofandroiddev.chapter3.sameorientationconflict.StickyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_scrollable_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:context=".chapter3.sameorientationconflict.StickyLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sticky_layout_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="HEADER"
            android:textSize="30dp" />

        <ListView
            android:id="@+id/lv_sticky_layout_content"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:overScrollMode="never"></ListView>
    </LinearLayout>
</com.example.artofandroiddev.chapter3.sameorientationconflict.StickyLayout>
