<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.artofandroiddev.chapter4.focuschange.FocusChangedActivity">

    <com.example.artofandroiddev.chapter4.focuschange.FocusChangedView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="isFocused"
        android:text="FocusChangedView"
        android:textSize="10dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="alert"
        android:text="Show Dialog"
        android:textSize="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="isFocused" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="isFocused"
        android:text="EditText" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="isFocused" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="isFocused"
        android:text="TextView" />
</LinearLayout>
