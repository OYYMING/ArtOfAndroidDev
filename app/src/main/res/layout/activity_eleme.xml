            android:text="丢球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="起球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="扔球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="丢球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="扔球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="丢球" />
    </LinearLayout>

    <TextView
        android:id="@+id/shoppingCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#66666666"
        android:padding="5dp"
        android:text="0" />
</RelativeLayout>
