        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="丢球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="起球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="throwBalls"
            android:text="扔球" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
