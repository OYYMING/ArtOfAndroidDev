<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/btn_infant_bg_tap_xxhdpi" />
            <item android:width="30dp" android:height="2dp" android:gravity="center_vertical" android:left="20dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:dashGap="4dp" android:dashWidth="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/btn_infant_bg_xxhdpi" />
            <item android:width="30dp" android:height="2dp" android:gravity="center_vertical" android:left="20dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:dashGap="4dp" android:dashWidth="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>